<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:strokeColor="@color/outline_color"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="?attr/colorSurface"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeWidth="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="8dp"
            android:id="@+id/llm_config_cardView">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="16dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:id="@+id/select_llm_model"
                android:text="@string/project_act_config_llm_dialog_model" />

            <Spinner
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:id="@+id/llm_model_spinner">

            </Spinner>

            <com.google.android.material.textview.MaterialTextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginTop="16dp"
                android:id="@+id/select_target_language"
                android:text="@string/project_act_config_translator_dialog_to" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                app:boxStrokeColor="@color/outline_color"
                app:boxBackgroundMode="outline"
                android:id="@+id/target_language_input_layout">

                <AutoCompleteTextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:completionThreshold="1"
                    android:dropDownHeight="200dp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:id="@+id/target_language_autocomplete"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginTop="16dp"
                android:id="@+id/system_prompt_label"
                android:text="@string/project_act_config_llm_dialog_system_prompt" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                app:boxStrokeColor="@color/outline_color"
                app:boxBackgroundMode="outline"
                android:id="@+id/system_prompt_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="textMultiLine"
                    android:focusable="true"
                    android:minLines="3"
                    android:maxLines="50"
                    android:gravity="top"
                    android:id="@+id/system_prompt_edit_text" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>